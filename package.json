{
  "name": "openach",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch\" \"nodemon --exec \\\"npm run test\\\" \" ",
    "watch": "tsc -w",
