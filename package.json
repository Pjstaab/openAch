  "license": "ISC",
  "nyc": {
    "exclude": [
      "spec/**"
    ]
  },
  "dependencies": {
    "async-file": "^2.0.2",
    "dotenv": "^8.0.0",
    "pino": "^5.13.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.6.8",
    "@types/pino": "^5.8.8",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-plugin-import": "^2.18.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
